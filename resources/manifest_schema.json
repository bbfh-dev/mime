{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"type": "object",
	"required": [
		"type",
		"iterators"
	],
	"properties": {
		"type": {
			"type": "string",
			"enum": [
				"generate",
				"inline"
			]
		},
		"iterators": {
			"type": "object",
			"patternProperties": {
				"^[a-z_]+$": {
					"type": "array",
					"items": {
						"type": [
							"array",
							"string"
						],
						"minItems": 1,
						"items": {
							"type": "string"
						}
					}
				}
			}
		},
		"arguments": {
			"type": "array",
			"items": {
				"type": "string"
			}
		}
	},
	"additionalProperties": false
}
